pipeline {
    agent {
        node {
            label 'docker-agent-python'
        }
    }
    
    triggers {
        pollSCM 'H/4 * * * *'
    }

    stages {
        
        stage ("Build") {
            steps {
                echo "Ajoy Test Building...."
                sh '''
                echo "doing building stuff"
                '''
            }
        }
        
        stage ("Test") {
            steps {
                echo "Testing...."
                sh '''
                echo "testing stuff "
                '''
            }
        }
        
        stage ("Deploy") {
            steps {
                echo "Deploying"
                sh '''
                echo "Perform deployments stuffs"
                '''
            }
        }
     }
}
