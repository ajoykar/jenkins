pipeline {
    agent {
        node {
            label 'docker-agent-python'
        }
    }
    
    triggers {
        pollSCM 'H/1 * * * *'
    }

    stages {
        
        stage ("Build") {
            steps {
                echo "Ajoy kar Test Building...."
                sh '''
                cd test-app
                apt-get install python3-pip
                pip install -r requirements.txt
                '''
            }
        }
        
        stage ("Test") {
            steps {
                echo "Testing...."
                sh '''
                cd test-app
                python3 myapp.py
                python3 myapp.py --name=Achintya
                '''
            }
        }
        
        stage ("Deploy") {
            steps {
                echo "Deploying"
                sh '''
                echo "Perform deployments stuffs"
                '''
            }
        }
     }
}